    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="fw-bold mb-3">Latest Job Postings</h2>
                <p class="text-muted">Fresh opportunities added daily</p>
            </div>
        </div>
        
        <div class="row">
            <% latestJobs.slice(0, 6).forEach(function(job) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 job-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/jobs/<%= job._id %>" class="text-decoration-none text-dark">
                                    <%= job.title %>
                                </a>
                            </h5>
                            
                            <p class="text-muted mb-2">
                                <i class="fas fa-building me-1"></i>
                                <%= job.company %>
                            </p>
                            
                            <p class="text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <%= job.location %>
                            </p>
                            
                            <span class="badge bg-primary mb-2"><%= job.category %></span>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted">
                                    <%= job.timeAgo %>
                                </small>
                                <a href="/jobs/<%= job._id %>" class="btn btn-outline-primary btn-sm">
